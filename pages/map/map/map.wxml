<!--pages/demo06/map/map.wxml-->

<view class='map_container'>
      <map class='map' latitude='{{latitude}}' longitude='{{longitude}}' markers='{{markers}}' bindmarkertap="showModal">
      </map>
      <button class="bttn-material-circle bttn-lg bttn-primary post" type="primary" bindtap="createLocation"><cover-image class="my" src="/images/plus.png"></cover-image></button>
</view>
<cover-view class="commodity_screen" bindtap="hideModal" wx:if="{{showModalStatus}}"></cover-view>
    <!--弹出框  -->
<cover-view animation="{{animationData}}" class="commodity_attr_box" wx:if="{{showModalStatus}}">

<cover-view class='placeBox'>

      <cover-view class='placeViewLt'>
      <cover-view class='viewTitle'>{{nowlocation.name}}</cover-view>
      <cover-view class='viewDis'>评分：{{nowlocation.rank}}</cover-view>
      <cover-view class='viewAddr'>共有{{nowlocation.totalscorepeople}}人参与评分</cover-view>
      </cover-view>
      <cover-view class='placeViewMd'>
      <cover-image data-id="{{nowlocation.id}}" id="{{nowlocation.id}}" bindtap="checkin" src='/images/check.png'></cover-image>
      </cover-view>
      <cover-view class='placeViewRt'>
      <cover-image data-id="{{nowlocation.id}}" id="{{nowlocation.id}}" bindtap="opendetail" src='/images/link.png'></cover-image>
      </cover-view>

</cover-view>


<cover-view class='viewIcon'>
      <cover-image class='indexIcon' src='/images/people.png'></cover-image>
      <cover-view class='timeText'>{{nowlocation.checkednum}}人在这儿打过卡</cover-view>

      <cover-image class='indexIcon1' id="{{nowlocation.id}}"  data-id="{{nowlocation.id}}" src='/images/edit.png' bindtap='createPassage'></cover-image>
      <cover-view class='timeText1' id="{{nowlocation.id}}"  id="{{nowlocation.id}}" bindtap='createPassage'>发布想法</cover-view>

      <cover-image class='indexIcon2' id="{{nowlocation.id}}"  src='/images/region.png' bindtap="openLocation"></cover-image> 
      <cover-view class='timeText1' id="{{nowlocation.id}}"  id="{{nowlocation.id}}" bindtap="openLocation">导航</cover-view>
</cover-view>
</cover-view>