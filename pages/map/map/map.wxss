@import "./btn.wxss";
.map_container{
  position:absolute;
  top:0;
  bottom:0;
  left:0;
  right:0;
}
.map{
  width:100%;
  height:100%;
}

.circle{
  width: 5px;
  height: 150px;
  border: 0 solid #ffffff;
  border-radius: 50px;
  box-shadow: 4px 1px 1px #cccccc;

}

.im{
  margin-left: 80rpx;
  margin-top: 35rpx;
  height: 145rpx;
  width: 55rpx;
  border-radius:50%;
}

.post {
  float: right;
  position: fixed;
  bottom: 20px;
  right: 10px; 
}

.rating {
  unicode-bidi: bidi-override;
  direction: rtl;
}
.rating > span {
  display: inline-block;
  position: relative;
  width: 1.1em;
}
.rating > span:hover:before {
   content: "\2605";
   position: absolute;
}

.ifull {
  display: inline-block;
  width: 75rpx;
  height: 100rpx;
  margin-left: 10rpx;
  vertical-align: middle;
}

/*底部弹窗开始 -使屏幕变暗  */
.commodity_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}
/*对话框 */
.commodity_attr_box {
  height: 280rpx;
